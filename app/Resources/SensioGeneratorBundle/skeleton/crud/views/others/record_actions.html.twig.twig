<div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-default" data-confirm="Are you sure you want to delete this {{ entity }}?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
