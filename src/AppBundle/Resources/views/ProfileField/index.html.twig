{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>ProfileField List</h1>
    <p class="count">
        Displaying {{ profileFields|length }} profileFields of {{ profileFields.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('profile_field_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('profile_field_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for profileField in profileFields %}
            <tr>
                <td>
                    <a href="{{ path('profile_field_show', { 'id': profileField.id }) }}">
                        {{ profileField.created }}
                    </a>
                </td>
                <td>{% if profileField.updated %}{{ profileField.updated|date }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(profileFields) }}
    </div>

{% endblock %}
