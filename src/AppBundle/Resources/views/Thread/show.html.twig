{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Thread</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('thread_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Replycount</th>
            <td>{{ thread.replyCount }}</td>
            </tr>
            <tr>
                <th>Youtubeid</th>
            <td>{{ thread.youtubeId }}</td>
            </tr>
            <tr>
                <th>Etag</th>
            <td>{{ thread.etag }}</td>
            </tr>
            <tr>
                <th>Refreshed</th>
                <td>{% if thread.refreshed %}{{ thread.refreshed|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if thread.created %}{{ thread.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if thread.updated %}{{ thread.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
