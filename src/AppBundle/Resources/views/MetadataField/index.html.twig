{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>MetadataField List</h1>
    <p class="count">
        Displaying {{ metadataFields|length }} metadataFields of {{ metadataFields.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('metadata_field_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('metadata_field_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for metadataField in metadataFields %}
            <tr>
                <td>
                    <a href="{{ path('metadata_field_show', { 'id': metadataField.id }) }}">
                        {{ metadataField.created }}
                    </a>
                </td>
                <td>{% if metadataField.updated %}{{ metadataField.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(metadataFields) }}
    </div>

{% endblock %}
