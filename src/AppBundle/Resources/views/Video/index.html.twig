{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Video List</h1>
    <p class="count">
        Displaying {{ videos|length }} videos of {{ videos.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('video_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <div class="clearfix"></div>

    {% for video in videos %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="{{ path('video_show', { 'id': video.id }) }}">
                    {{ video }}
                </a>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3">
                        {% if video.thumbnail %}
                            <a href="{{ path('video_show', { 'id': video.id }) }}">
                                <img src="{{ video.thumbnail }}" class="thumbnail pull-left"/>
                            </a>
                        {% endif %}
                    </div>
                    <div class="col-sm-9">
                        <p>{{ video.description|truncate(200)|nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                {% if video.publishedAt %}Published {{ video.publishedAt|date }}{% endif %}
            </div>
        </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(videos) }}
    </div>

{% endblock %}
