{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>VideoProfile List</h1>
    <p class="count">
        Displaying {{ videoProfiles|length }} videoProfiles of {{ videoProfiles.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('video_profile_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('video_profile_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for videoProfile in videoProfiles %}
            <tr>
                <td>
                    <a href="{{ path('video_profile_show', { 'id': videoProfile.id }) }}">
                        {{ videoProfile.created }}
                    </a>
                </td>
                <td>{% if videoProfile.updated %}{{ videoProfile.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(videoProfiles) }}
    </div>

{% endblock %}
