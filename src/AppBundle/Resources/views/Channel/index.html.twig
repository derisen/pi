{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Channel List</h1>
    <p class="count">
        Displaying {{ channels|length }} channels of {{ channels.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('channel_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Youtubeid</th>
                <th>Etag</th>
                <th>Thumbnailurl</th>
                <th>Title</th>
                <th>Description</th>
                <th>Publishedat</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for channel in channels %}
            <tr>
                <td>
                    <a href="{{ path('channel_show', { 'id': channel.id }) }}">
                        {{ channel.youtubeId }}
                    </a>
                </td>
                <td>{{ channel.etag }}</td>
                <td>{{ channel.thumbnailUrl }}</td>
                <td>{{ channel.title }}</td>
                <td>{{ channel.description }}</td>
                <td>{% if channel.publishedAt %}{{ channel.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if channel.created %}{{ channel.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if channel.updated %}{{ channel.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(channels) }}
    </div>

{% endblock %}
