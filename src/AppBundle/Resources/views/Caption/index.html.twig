{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Caption List</h1>
    <p class="count">
        Displaying {{ captions|length }} captions of {{ captions.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('caption_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Youtubeid</th>
                <th>Etag</th>
                <th>Lastupdated</th>
                <th>Trackkind</th>
                <th>Language</th>
                <th>Name</th>
                <th>Audiotracktype</th>
                <th>Iscc</th>
                <th>Isdraft</th>
                <th>Isautosynced</th>
                <th>Content</th>
                <th>Created</th>
                <th>Updated</th>         
            </tr>
        </thead>
        <tbody>
            {% for caption in captions %}
                <tr>
                    <td>
                        <a href="{{ path('caption_show', { 'id': caption.id }) }}">
                            {{ caption.youtubeId }}
                        </a>
                    </td>
                    <td>{{ caption.etag }}</td>
                    <td>{% if caption.lastUpdated %}{{ caption.lastUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ caption.trackKind }}</td>
                    <td>{{ caption.language }}</td>
                    <td>{{ caption.name }}</td>
                    <td>{{ caption.audioTrackType }}</td>
                    <td>{% if caption.isCC %}Yes{% else %}No{% endif %}</td>
                    <td>{% if caption.isDraft %}Yes{% else %}No{% endif %}</td>
                    <td>{% if caption.isAutoSynced %}Yes{% else %}No{% endif %}</td>
                    <td>{{ caption.content }}</td>
                    <td>{% if caption.created %}{{ caption.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if caption.updated %}{{ caption.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(captions) }}
    </div>

{% endblock %}
