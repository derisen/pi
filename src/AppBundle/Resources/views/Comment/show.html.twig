{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Comment</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('comment_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('comment_refresh', { 'id': comment.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-refresh'></span> Refresh
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Youtubeid</th>
                <td>
                    {{ comment.youtubeId }}
                </td>
            </tr>
            <tr>
                <th>Thread</th>
                <td>
                    <a href="{{ path('thread_show', {'id': comment.thread.id}) }}">
                        {{ comment.thread }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Etag</th>
                <td>{{ comment.etag }}</td>
            </tr>
            <tr>
                <th>Authorname</th>
                <td>{{ comment.authorName }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ comment.likes }}</td>
            </tr>
            <tr>
                <th>Publishedat</th>
                <td>{% if comment.publishedAt is not null %}{{ comment.publishedAt|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if comment.updatedAt is not null %}{{ comment.updatedAt|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if comment.created %}{{ comment.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if comment.updated %}{{ comment.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
