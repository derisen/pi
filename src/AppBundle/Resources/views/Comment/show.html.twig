{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Comment</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('comment_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('comment_delete', { 'id': comment.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Comment?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Youtubeid</th>
            <td>{{ comment.youtubeId }}</td>
            </tr>
            <tr>
                <th>Etag</th>
            <td>{{ comment.etag }}</td>
            </tr>
            <tr>
                <th>Authorname</th>
            <td>{{ comment.authorName }}</td>
            </tr>
            <tr>
                <th>Content</th>
            <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Likes</th>
            <td>{{ comment.likes }}</td>
            </tr>
            <tr>
                <th>Publishedat</th>
                <td>{% if comment.publishedAt %}{{ comment.publishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if comment.updatedAt %}{{ comment.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if comment.created %}{{ comment.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if comment.updated %}{{ comment.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
