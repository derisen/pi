{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>Playlist</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('playlist_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Youtubeid</th>
            <td>{{ playlist.youtubeId }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if playlist.published %}{{ playlist.published|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
            <td>{{ playlist.status }}</td>
            </tr>
            <tr>
                <th>Title</th>
            <td>{{ playlist.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
            <td>{{ playlist.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if playlist.created %}{{ playlist.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if playlist.updated %}{{ playlist.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
