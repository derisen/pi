{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Playlist List</h1>
    <p class="count">
        Displaying {{ playlists|length }} playlists of {{ playlists.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('playlist_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('playlist_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
                
                <div class="clearfix"></div>

    {% for playlist in playlists %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="{{ path('playlist_show', { 'id': playlist.id }) }}">
                    {{ playlist }}
                </a>
            </div>
            <div class="panel-body">
                {% if playlist.description %}
                    <p>{{ playlist.description }}</p>
                {% else %}
                    No description
                {% endif %}
                <p>{{ playlist.videos|length }} videos.</p>
            </div>

            <div class="panel-footer text-right">
                Published on youtube {% if playlist.publishedAt %}{{ playlist.publishedAt|date('Y-m-d H:i:s') }}{% endif %}. 
                    Created {{ playlist.created|date('Y-m-d H:i:s') }}. Last update: {{ playlist.updated|date('Y-m-d H:i:s') }}
            </div>
        </div>
    {% endfor %}

    <div class="navigation clearfix">
        {{ knp_pagination_render(playlists) }}
    </div>

{% endblock %}
